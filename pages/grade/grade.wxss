/* pages/grade/grade.wxss */
.grade-container {
  background-color: #2F5597;
  min-height: 100vh;
}

.scroll-view_G {
  white-space: nowrap;
  text-align: center;
  top: 80rpx;
}

.cir {
  display: inline-block;
  margin-top: 100rpx;
  height: 300rpx;
  width: 300rpx;
}

.scroll-view-item_G {
  text-align: center;
  width: 100%;
  height: 500rpx;
  margin-top: 40rpx;
  position: relative;
  background: white;
  margin-bottom: 40rpx;
}

.score-upper-text {
  text-align: center;
  left: 300rpx;
  top: 60rpx;
  position: absolute;
}

#score {
  margin-top: -175rpx;
}

.score-lower-text {
  top: 30rpx;
  position: relative;
  font-size: 35rpx;
}

.progress-bar {
  top: 40rpx;
  position: relative;
  width: 100%;
  text-align: center;
}

.progress-bar-item {
  width: 80%;
  margin-top: 80rpx;
  margin-left: 60rpx;
}
